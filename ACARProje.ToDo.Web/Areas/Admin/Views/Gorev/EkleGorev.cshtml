@model GorevAddViewModel
@{
    ViewData["Title"] = "EkleGorev";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post">

    <div class="form-group">
        <label>Ad :</label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açiklama :</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea asp-for="Aciklama" class="form-control">

        </textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet :</label>
        <span asp-validation-for="AciliyetId" class="text-danger"></span>
        <select asp-for="AciliyetId" class="form-control" asp-items="ViewBag.Aciliyetler">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-info btn-sm" type="submit">Kaydet</button>
</form>
@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}


