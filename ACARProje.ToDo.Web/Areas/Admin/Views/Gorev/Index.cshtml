@model List<GorevListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@if (Model.Count != 0)
{
    <a asp-action="EkleGorev" asp-controller="Gorev" class="btn btn-sm btn-info my-2"> Yeni Gorev Oluştur</a>
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Aciklama</th>
                <th>OLuşturulma Tarihi</th>
                <th>Aciliyet</th>

                <th>İşlem</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Aciklama</td>
                <td>@item.OlusturulmaTarih.ToString("D")</td>
                <td>@item.Aciliyet.Tanim</td>


                <td>
                    <a asp-action="GuncelleGorev" asp-controller="Gorev" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="SilGorev" asp-controller="Gorev" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>

                </td>
            </tr>

            }

        </tbody>
    </table>

}
else
{

    <div class="p-3 text-center lead mt-4">
        <p class="lead">
            Herhangi bir görev bulunamadı !
        </p>
        <a asp-action="EkleGorev" asp-controller="Gorev" class="btn btn-sm btn-info my-2"> Yeni Gorev Oluştur</a>
    </div>
}